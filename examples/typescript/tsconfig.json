{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "types",
    "test.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
